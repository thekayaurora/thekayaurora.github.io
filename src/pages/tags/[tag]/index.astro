---
import Layout from "../../../layouts/Site.astro";

type BlogPost = {
  frontmatter: {
    title: string;
    date: string;
    desc: string;
    tags: string[];
  };
  url: string;
};

export async function getStaticPaths() {
  const posts = Object.values(import.meta.glob("../../blog/*.md", { eager: true })) as BlogPost[];

  const tags = new Set<string>();
  posts.forEach((post) => {
    post.frontmatter.tags?.forEach((tag) => tags.add(tag));
  });

  return Array.from(tags).map((tag) => ({
    params: { tag },
  }));
}

const posts = Object.values(import.meta.glob("../../blog/*.md", { eager: true })) as BlogPost[];

const { tag } = Astro.params;

const taggedPosts = posts.filter((post) =>
  post.frontmatter.tags?.includes(tag)
);

taggedPosts.sort(
  (a, b) =>
    new Date(b.frontmatter.date).getTime() -
    new Date(a.frontmatter.date).getTime()
);
---

<Layout title="Blog">
      <div class="head hasbtn">
      <div>
      <h1 id="title">✏️ Blog!</h1>
      <div>Posts tagged with <code>{tag}</code></div>
      <div><a href="../feed.xml" id="rssfallback">Also available on RSS!</a></div>
      </div>
      <div>
      <a class="button" href="../feed.xml" title="RSS Feed"><i class="fas fa-rss fa-xl"></i></a>
      </div>
   </div>
    {taggedPosts.map((post) => 
    <div id="blog">
        <h1><a href={post.url} id="postlink">{post.frontmatter.title}</a></h1>
        <div><i style="font-size:1.1rem">{post.frontmatter.desc || 'No description available'}</i></div>
        <div>🗓️ {post.frontmatter.date} ・ {post.frontmatter.tags && (<ul id="tagarray">{post.frontmatter.tags.map(tag => (<li><a class="tag" href={`/tags/${encodeURIComponent(tag)}/`}>{tag}</a></li>))}</ul>)}</div>
       </div>
    )}
</Layout>