---
interface Props {
	title: string;
}
const { title } = Astro.props;
import { d } from "../config";
/* import { ClientRouter } from 'astro:transitions'; */
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import RetroFrontend from "../components/RetroFrontend.astro";
import ModernFrontend from "../components/ModernFrontend.astro";
---

<!doctype html>
<html lang="en">
	<head>
        <!-- <ClientRouter /> --> <!-- Smooth transitions between pages will rebecome available in v3.1. -->
		<meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta property="og:site_name" content=`${d.shortname}'s website` />
        <meta property="og:image" content={d.logo}>
        <meta name="title" content={title} />
		<meta name="description" content="" />
		<link rel="icon" type="image/svg+xml" href={d.favicon} />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href=`https://use.fontawesome.com/releases/v${d.faver}/css/all.css`>
		<title>{title} ~ {d.name}</title>
	    <RetroFrontend />
        <ModernFrontend />
	</head>
	<body>
        <Navbar />
         <div class="content">
		<slot />
		</div>
		<Footer />
	</body>
</html>